{
  "name": "wearesho-team/bobra-payments",
  "description": "Common interfaces for processing payment",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^7.2",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "Wearesho\\Bobra\\Payments\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Bobra\\Payments\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": "phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
    "cover": "phpunit --coverage-clover=coverage.xml",
    "test": "phpunit",
    "post-install-cmd": "cghooks add --ignore-lock",
    "post-update-cmd": "cghooks update"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "composer lint",
        "composer test"
      ],
      "post-merge": "composer update --lock"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4",
    "brainmaestro/composer-git-hooks": "^2.6",
    "phpunit/phpunit": "^8"
  },
  "suggest": {
    "wearesho-team/platon": "Platon.ua payments integration",
    "wearesho-team/i-pay": "IPay payments integration"
  }
}
